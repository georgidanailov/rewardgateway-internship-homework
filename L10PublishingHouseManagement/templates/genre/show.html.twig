{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}
    <h1>Genre</h1>
    <div class="card shadow-sm p-4 mb-4 bg-white rounded">

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genre.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ genre.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ genre.description }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_genre_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('app_genre_edit', {'id': genre.id}) }}" class="btn btn-light">edit</a>

    {{ include('genre/_delete_form.html.twig') }}
{% endblock %}
