{% extends 'base.html.twig' %}

{% block title %}New Genre{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Create New Genre</h1>

        <div class="card shadow-sm p-4 mb-4 bg-white rounded">
            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.name, 'Genre Name', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.description) }}
            </div>
            <div>
                {{ form_label(form.books, 'Books', {'label_attr': {'class': 'form-label'}}) }}
                <div class="form-group">
                    {% for book in form.books %}
                        <div class="form-check form-check-inline">
                            {{ form_widget(book, {'attr': {'class': 'form-check-input form-label'}}) }}
                            {{ form_label(book, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                    {% endfor %}
                </div>
            </div>
            <button class="btn btn-primary me-2">Create Genre</button>
            <a href="{{ path('app_genre_index') }}" class="btn btn-secondary">Back to list</a>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
