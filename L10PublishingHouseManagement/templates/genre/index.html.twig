{% extends 'base.html.twig' %}

{% block title %}Genre index{% endblock %}

{% block body %}
    <h1>Genre index</h1>
    <div class="card shadow-sm p-4 mb-4 bg-white rounded">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for genre in genres %}
                <tr>
                    <td>{{ genre.id }}</td>
                    <td>{{ genre.name }}</td>
                    <td>{{ genre.description }}</td>
                    <td>
                        <a href="{{ path('app_genre_show', {'id': genre.id}) }}" class="btn btn-secondary">show</a>
                        <a href="{{ path('app_genre_edit', {'id': genre.id}) }}" class="btn btn-light">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_genre_new') }}" class="btn btn-primary me-2">Create new</a>
{% endblock %}
