    <div class="card shadow-sm p-4 mb-4 bg-white rounded">

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ editor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ editor.name }}</td>
            </tr>
            <tr>
