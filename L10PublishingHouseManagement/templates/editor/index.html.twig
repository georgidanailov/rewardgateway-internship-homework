{% extends 'base.html.twig' %}

{% block title %}Editor index{% endblock %}

{% block body %}
    <h1>Editor index</h1>

    <div class="card shadow-sm p-4 mb-4 bg-white rounded">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Editorial_number</th>
                <th>Specialty</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for editor in editors %}
                <tr>
                    <td>{{ editor.id }}</td>
                    <td>{{ editor.name }}</td>
                    <td>{{ editor.editorialNumber }}</td>
                    <td>{{ editor.specialty }}</td>
                    <td>
                        <a href="{{ path('app_editor_show', {'id': editor.id}) }}" class="btn btn-secondary">show</a>
                        <a href="{{ path('app_editor_edit', {'id': editor.id}) }}" class="btn btn-light">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_editor_new') }}" class="btn btn-primary me-2">Create new</a>
{% endblock %}
