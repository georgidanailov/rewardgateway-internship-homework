{% extends 'base.html.twig' %}

{% block title %}Edit Author{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Edit Author</h1>

        <div class="card shadow-sm p-4 mb-4 bg-white rounded">
            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.name, 'Author Name', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.birth_year, 'Birth Year', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.birth_year, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.birth_year) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.nationality, 'Nationality', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nationality, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nationality) }}
            </div>

            <button class="btn btn-primary me-2">Update</button>
            {{ form_end(form) }}
        </div>

        <a href="{{ path('app_author_index') }}" class="btn btn-secondary">Back to list</a>
        {{ include('author/_delete_form.html.twig') }}
    </div>
{% endblock %}
