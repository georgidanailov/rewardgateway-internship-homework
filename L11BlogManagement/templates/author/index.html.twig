{% extends 'base.html.twig' %}

{% block title %}Authors{% endblock %}

{% block body %}
    <h1>Authors</h1>

    {% for author in authors %}
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">{{ author.name }}</h5>
                <p class="card-text">{{ author.bio }}</p>
            </div>
        </div>
    {% else %}
        <p>No authors found.</p>
    {% endfor %}
{% endblock %}
